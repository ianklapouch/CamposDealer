@model CamposDealer.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Cliente</h1>
<hr />

<form asp-action="Edit">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCliente" />
            <div class="form-group col-3">
                <label asp-for="NmCliente" class="control-label"></label>
                <input asp-for="NmCliente" class="form-control bg-dark text-light" />
                <span asp-validation-for="NmCliente" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control bg-dark text-light" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="row mt-4 mb-4">
                <div class="col-2">
                    <input class="btn btn-primary w-100" type="submit" value="Salvar" />
                </div>
            </div>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Voltar para a lista de Clientes</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
