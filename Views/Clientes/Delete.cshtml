@model CamposDealer.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Cliente</h1>
<hr />

<h3>Você tem certeza que deseja excluir o Cliente selecionado?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NmCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NmCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <div class="row mt-4 mb-4">
            <div class="col-2">
                <input class="btn btn-danger w-100" type="submit" value="Excluir" />
            </div>
        </div>
        <div class="row">
            <a asp-action="Index">Voltar para a lista de Clientes</a>
        </div>
    </form>
</div>
