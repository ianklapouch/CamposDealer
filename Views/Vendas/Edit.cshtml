@model CamposDealer.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Venda</h1>
<hr />


<form asp-action="Edit">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenda" />
            <div class="form-group col-3">
                <label asp-for="IdCliente" class="control-label">Cliente</label>
                <select asp-for="IdCliente" class="form-control bg-dark text-light" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group col-3">
                <label asp-for="IdProduto" class="control-label">Produto</label>
                <select asp-for="IdProduto" class="form-control bg-dark text-light" asp-items="ViewBag.IdProduto"></select>
            </div>
            <div class="form-group col-3">
                <label asp-for="QtdVenda" class="control-label"></label>
                <input asp-for="QtdVenda" class="form-control bg-dark text-light" />
                <span asp-validation-for="QtdVenda" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="VlrUnitarioVenda" class="control-label"></label>
                <input asp-for="VlrUnitarioVenda" class="form-control bg-dark text-light" />
                <span asp-validation-for="VlrUnitarioVenda" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="DthVenda" class="control-label"></label>
                <input asp-for="DthVenda" class="form-control bg-dark text-light" />
                <span asp-validation-for="DthVenda" class="text-danger"></span>
            </div>

            <div class="row mt-4 mb-4">
                <div class="col-2">
                    <input class="btn btn-primary w-100" type="submit" value="Salvar" />
                </div>
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a lista de Vendas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
