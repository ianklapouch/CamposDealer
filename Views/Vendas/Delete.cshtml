@model CamposDealer.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Venda</h1>
<hr />

<h3>Você tem certeza que deseja excluir a Venda selecionada?</h3>
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VlrUnitarioVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VlrUnitarioVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DthVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DthVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VlrTotalVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VlrTotalVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.IdCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Produto.IdProduto)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVenda" />
        <div class="row mt-4 mb-4">
            <div class="col-2">
                <input class="btn btn-danger w-100" type="submit" value="Excluir" />
            </div>
        </div>
        <div class="row">
            <a asp-action="Index">Voltar para a lista de Vendas</a>
        </div>
    </form>
</div>
