@model IEnumerable<CamposDealer.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Produtos" asp-action="Index" method="get">
    <p>
        Nome: <input type="text" name="dscProduto" />
        Preço: <input type="text" name="vlrUnitario" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DscProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlrUnitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DscProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlrUnitario)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProduto">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProduto">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProduto">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
