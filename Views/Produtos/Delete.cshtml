@model CamposDealer.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Produto</h1>
<hr />

<h3>Você tem certeza que deseja excluir o Produto selecionado?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DscProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DscProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VlrUnitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VlrUnitario)
        </dd>
    </dl>
    

        <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <div class="row mt-4 mb-4">
            <div class="col-2">
                <input class="btn btn-danger w-100" type="submit" value="Excluir" />
            </div>
        </div>
        <div class="row">
            <a asp-action="Index">Voltar para a lista de Produtos</a>
        </div>
    </form>
</div>
