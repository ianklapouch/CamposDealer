@model CamposDealer.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Produto</h1>
<hr />



<form asp-action="Edit">
    <div class="container">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduto" />

            <div class="form-group col-3">
                <label asp-for="DscProduto" class="control-label"></label>
                <input asp-for="DscProduto" class="form-control bg-dark text-light" />
                <span asp-validation-for="DscProduto" class="text-danger"></span>
            </div>

            <div class="form-group col-3">
                <label asp-for="VlrUnitario" class="control-label"></label>
                <input asp-for="VlrUnitario" class="form-control bg-dark text-light" />
                <span asp-validation-for="VlrUnitario" class="text-danger"></span>
            </div>

            <div class="row mt-4 mb-4">
                <div class="col-2">
                    <input class="btn btn-primary w-100" type="submit" value="Salvar" />
                </div>
            </div>

        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a lista de Produtos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
